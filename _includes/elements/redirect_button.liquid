<div class="card-container">
  <div
    class="card"
    {% if include.id %}
    id="{{ include.id }}"
    {% endif %}
    style=" {% if include.width %} width: {{ include.width }}; {% endif %}">
    <a href="{{ include.link }}">
      <div class="card-body">
        <h1
          class="redirect"
          {% if include.text-size %}
          style="font-size: {{ include.text-size }};"
          {% endif %}>{{ include.text }}</h1>
      </div>
    </a>
  </div>
</div>